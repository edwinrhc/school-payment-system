generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  USER
  PARENT
}

enum PaymentStatus {
  PENDING
  PAID
  CANCELED
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String

  // Usamos el enum UserRole
  role UserRole @default(PARENT)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  createdBy Int?
  updatedBy Int?
  isActive  Boolean  @default(true)

  // Relación: un padre puede tener varios estudiantes
  students Student[]

  // Recuperación de contraseña
  resetToken          String? // Para recuperar contraseña
  resetTokenExpiresAt DateTime? // Caducidad del token
}

model Student {
  id        Int    @id @default(autoincrement())
  firstName String
  lastName  String
  typeDoc   String
  numDoc    String @unique
  grade     String // Ej: "3ro A" o "Secundaria 2"

  parentId Int
  parent   User @relation(fields: [parentId], references: [id])

  payments Payment[]
}

model Payment {
  id Int @id @default(autoincrement())

  studentId Int
  student   Student @relation(fields: [studentId], references: [id])

  provider   String? // "STRIPE", "CULQI", etc.
  externalId String? // ID de la transacción en la pasarela

  amount Decimal @db.Decimal(10, 2)
  month  String // Ej: "Marzo 2025"

  status PaymentStatus @default(PENDING) // pending | paid

  paidAt    DateTime?
  createdAt DateTime  @default(now())

  @@index([studentId])
}
